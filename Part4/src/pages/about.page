<apex:page sidebar="false" showheader="false" standardstylesheets="false">
  <apex:composition template="template">
    <apex:define name="title">
       Bob Buzzard Blog Site - About
    </apex:define>
    <apex:define name="tabdef">
   		<apex:variable var="tab" value="about"/>
    </apex:define> 
    <apex:define name="content">
		<div id="content">
			<div class="post">
				<h2 class="title">Welcome to Bob Buzzard's Example Site</h2>
				<div class="entry">
					<p>This site was built using Force.com sites to demonstrate how easy it is to create styled, templated web sites using the platform.</p>
				</div>
			</div>
			<div style="clear: both;">&nbsp;</div>
		</div>
		<!-- end #content -->
    </apex:define>
  </apex:composition>
</apex:page>